{
    "manifest_version": 3,
    "name": "Tableau de bord écolo",
    "description": "Se tenir au courant de l'actualité écolo à chaque nouvel onglet",
    "version": "1.0",
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "chrome_settings_overrides" : {
        "homepage": "https://developer.mozilla.org/"
    },
    "chrome_url_overrides" : {
        "newtab": "index.html"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    }
}