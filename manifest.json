{
    "manifest_version": 3,
    "name": "Tableau de bord écolo",
    "description": "Se tenir au courant de l'actualité écolo à chaque nouvel onglet",
    "version": "1.0",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "chrome_url_overrides" : {
        "newtab": "index.html"
    },
    "action": {
      "default_icon": {
          "16": "images/icon-16.png",
          "32": "images/icon-32.png",
          "48": "images/icon-48.png",
          "128": "images/icon-128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": [ "foret.jpg" ],
        "matches": [ "http://*/*", "https://*/*" ]
      }
  ]
}
